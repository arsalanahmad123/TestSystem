<div class="flex flex-col justify-start  h-screen items-center mt-12 mx-auto">
  <div class="mx-auto p-4 w-[90vw]">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gray-200 p-4 flex justify-between items-center">
        <h2 class="text-xl font-semibold">Profile Info</h2>
        <%= link_to edit_user_path(@user), class: "btn btn-ghost" do %>
          <i class="material-icons">edit</i>Edit Profile
        <% end %>
      </div>
      <div class="p-4">
        <div class="flex flex-col space-y-2">
          <div class="flex justify-between items-center">
            <span class="font-semibold">Username:</span>
            <span><%= @user.username %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="font-semibold">Email:</span>
            <span><%= @user.email %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="font-semibold">Solved Papers:</span>
            <span><%= @papers.count %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="w-[90vw] mx-auto p-4">
    <div class="bg-gradient-to-bl from-indigo-400 to-indigo-950 rounded text-white">
      <h1 class="text-center text-2xl font-bold p-4">Solved Papers</h1>
      <% if @papers.empty? %>
        <div class="p-4 text-center">
          You haven't solved any papers yet.
        </div>
      <% else %>
        <div class="p-4 space-y-2">
          <% @papers.each do |paper| %>
            <div class="flex justify-between items-center lg:flex-row flex-col lg:gap-y-0 gap-y-4">
              <span class="font-bold"><%= paper.title %></span>
              <span class="font-medium">You Scored: <%= @user.find_score(paper) %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
