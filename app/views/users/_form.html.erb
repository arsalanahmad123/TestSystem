<div class="flex justify-between items-center flex-col lg:flex-row mb-10 space-y-3 lg:space-y-0 mx-auto mt-12">
  <div class="w-4/5 lg:w-1/2">
    <%= image_tag "signup.png", class: "w-4/5 rounded-lg mx-auto"  %>
  </div>
  <div class="w-4/5 lg:w-1/2 bg-slate-100 rounded-md p-10 flex flex-col gap-y-5 dark:bg-slate-800">
    <h1 class="font-extrabold text-indigo-500 text-6xl mb-5 dark:text-white text-center">
      Sign up 
    </h1>
    <span class="text-sm font-bold text-red-400 bg-red-50 rounded-md p-3 dark:text-white dark:bg-slate-900">Kindly Enter Details of Student correctly so that we can recognize each student in our academy</span>
    <%= form_with model: @user,data: {turbo: false} do |f| %>
      <div class="mb-2">
        <label for="username" class="block text-sm font-bold text-gray-950 dark:text-white">Username</label>
        <%= f.text_field :username, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",required: true %>
      </div>
      <div class="mb-2">
        <label for="email" class="block text-sm font-bold text-gray-950 dark:text-white">Email</label>
        <%= f.email_field :email, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",required: true %>
      </div>
      <div class="mb-2">
        <label for="password" class="block text-sm font-bold text-gray-950 dark:text-white">Password</label>
        <%= f.password_field :password, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",required: true %>
      </div>
      <div class="mb-2">
        <label for="password_confirmation" class="block text-sm font-bold text-gray-950 dark:text-white">Password Confirmation</label>
        <%= f.password_field :password_confirmation, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",required: true %>
      </div>
      <div class="mb-2">
        <%= f.submit "Sign up", class: "zmt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md cursor-pointer bg-indigo-500 py-2 font-bold text-white hover:bg-indigo-700" %>
      </div>
    <% end %>
    <div class="flex justify-center items-center pt-5 text-slate-950 dark:text-white lg:flex-row flex-col">
      Already have an account? &nbsp;
      <%= link_to "Sign in", new_session_path,class: "text-indigo-500 hover:text-indigo-700 text-center dark:text-white underline" %>
    </div>
  </div>
</div>
