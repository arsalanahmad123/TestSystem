<div class="navbar rounded-md p-5">
  <div class="navbar-start">
    <%= link_to current_user ? papers_path : root_path do %>
      <h1 class="font-bold lg:text-3xl text-2xl italic text-indigo-500">IkramForcesAcademy</h1>
    <% end %>
  </div>
  <div class="navbar-center">
    <% if current_user && current_user.admin? %>
      <%= link_to "Papers",papers_path,class: "btn btn-ghost font-bold " %>
      <%= link_to "Users",users_path,class: "btn btn-ghost font-bold " %>
    <% end %>
  </div>
  <div class="navbar-end">
    <div class="dropdown-container">
      <div class="dropdown">
        <label class="cursor-pointer btn btn-ghost" tabindex="0">
          <%= current_user ? current_user.username : "Account" %>
        </label>
        <div class="dropdown-menu dropdown-menu-bottom-left">
          <a class="dropdown-item font-bold">Profile</a>
          <% if current_user %>
            <%= link_to "Logout",logout_path,data:{turbo_method: "delete"},class: "dropdown-item font-bold text-red-500" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
