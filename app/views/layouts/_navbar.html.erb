<div class="navbar rounded-md p-5 dark:bg-slate-900 dark:shadow-slate-950">
  <div class="navbar-start">
    <%= link_to current_user ? papers_path : root_path do %>
      <h1 class="font-bold lg:text-3xl text-2xl italic text-indigo-500 dark:text-white">IkramForcesAcademy</h1>
    <% end %>
  </div>
  <div class="navbar-center hidden lg:flex">
    <% if current_user && current_user.admin? %>
      <%= link_to "Papers",papers_path,class: "btn btn-ghost font-bold dark:text-white" %>
      <%= link_to "Users",users_path,class: "btn btn-ghost font-bold dark:text-white" %>
    <% end %>
  </div>
  <div class="navbar-end hidden lg:flex">
    <div class="dropdown-container">
      <div class="dropdown">
        <% if current_user %>
          <label class="cursor-pointer btn btn-ghost" tabindex="0">
            <%= current_user ? current_user.username : "" %>
          </label>
        <% end %>
        <% if current_user %>
          <div class="dropdown-menu dropdown-menu-bottom-left">
            <%= link_to "Profile", profile_path,class: "dropdown-item font-bold" %>
            <%= link_to "Logout",logout_path,data:{turbo_method: "delete"},class: "dropdown-item font-bold text-red-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="navbar-end lg:hidden relative" data-controller="menu">
    <span class="text-indigo-500 cursor-pointer">
      <i class="material-icons" data-action="click->menu#toggleMenu">menu</i>
    </span>
    <div class="absolute hidden top-8 right-3 bg-slate-100 font-bold text-slate-950 text-sm rounded-lg shadow dark:bg-slate-800 animate__animated animate__bounceInDown z-50" data-menu-target="mobileMenu" id="mobile-menu">
      <ul class="flex flex-col space-y-2 list-none p-3 justify-start items-start">
        <li class="py-2 px-4 rounded-md hover:bg-indigo-500 hover:text-white transition-all duration-200"><%= link_to "Papers",papers_path %></li>
        <li class="py-2 px-4 rounded-md hover:bg-indigo-500 hover:text-white transition-all duration-200"><%= link_to "Papers",papers_path %></li>
        <li class="py-2 px-4 rounded-md hover:bg-indigo-500 hover:text-white transition-all duration-200"><%= link_to "Papers",papers_path %></li>
        <li class="py-2 px-4 rounded-md hover:bg-indigo-500 hover:text-white transition-all duration-200"><%= link_to "Papers",papers_path %></li>
      </ul>
    </div>
  </div>
</div>
