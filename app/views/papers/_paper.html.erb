<div class="accordion accordion-open hover:cursor-default bg-slate-200" dom_id="paper-<%= paper.id %>">
  <input type="checkbox" id="paper-<%= paper.id %>" class="accordion-toggle" />
  <label for="paper-<%= paper.id %>" class="accordion-title flex flex-col justify-start items-start"><%= paper.title %>
    <span class="badge <%= paper.allowed? ? "badge-success" : "badge-error" %>"><%= paper.allowed? ? "Allowed" : "Not Allowed " %></span>
  </label>
  <div class="accordion-content">
    <div class="min-h-0 flex flex-col  gap-y-2">
      <div class="flex flex-row justify-between items-center border-b border-indigo-500 border-dashed">
        <span class="font-bold flex flex-row justify-center items-center dark:text-white">Description <i class="material-icons">arrow_right</i> </span>
        <span class="font-medium dark:text-white"><%= paper.description %></span>
      </div>
      <div class="flex flex-row justify-between items-center border-b border-indigo-500 border-dashed">
        <span class="font-bold flex flex-row justify-center items-center dark:text-white">Time <i class="material-icons">arrow_right</i></span>
        <span class="font-medium dark:text-white"><%= paper.minutes %> minutes</span>
      </div>
      <div class="flex flex-row justify-center items-center gap-x-3 dark:text-white mt-5">
        <% if current_user && current_user.admin? %>
          <%= link_to "Show", paper_path(paper), class: "btn btn-sm font-bold text-indigo-500 hover:text-indigo-700" %>
          <%= link_to "Delete",paper_path(paper),data: {turbo_method: :delete,turbo_confirm: "Are you sure?"},class: "btn btn-sm font-bold text-red-500 hover:text-red-700" %>
        <% end %>
        <% if paper.allowed? %>
          <%= link_to "Start Paper",startpaper_path(paper),class: "btn btn-sm bg-indigo-500 font-bold text-white" %>
        <%  end %>
      </div>
    </div>
  </div>
</div>
